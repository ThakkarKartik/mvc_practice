@model IEnumerable<WebPractice.Models.UserProducts>


@{
    ViewBag.Title = "ViewProd";
}

<h2>All Products</h2>

<p>
    @Html.ActionLink("Create New", "Index")
</p>
<table class="table">
    <tr>
        <th>
            Product Name
            @*@Html.DisplayNameFor(model => model.ProdName)*@
        </th>
        <th>
            CategoryID
            @*@Html.DisplayNameFor(model => model.CatID)*@
        </th>
        <th>
            Description
            @*@Html.DisplayNameFor(model => model.ProdDesc)*@
        </th>
        <th>
            Price
            @*@Html.DisplayNameFor(model => model.Price)*@
        </th>
        <th>
            UserName
            @*@Html.DisplayNameFor(model => model.UserID)*@
        </th>
        <th>
            CreatedOn
            @*@Html.DisplayNameFor(model => model.CreatedOn)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.product.ProdName
            @*@Html.DisplayFor(modelItem => item.ProdName)*@
        </td>
        <td>
            @item.product.CatID
            @*@Html.DisplayFor(modelItem => item.CatID)*@
        </td>
        <td>
            @item.product.ProdDesc
            @*@Html.DisplayFor(modelItem => item.ProdDesc)*@
        </td>
        <td>
            @item.product.Price
            @*@Html.DisplayFor(modelItem => item.Price)*@
        </td>
        <td>
            @item.user.Name
            @*@Html.DisplayFor(modelItem => item.UserID)*@
        </td>
        <td>
            @item.product.CreatedOn
            @*@Html.DisplayFor(modelItem => item.CreatedOn)*@
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.product.ProdID }) |
            @Html.ActionLink("Details", "Details", new { id=item.product.ProdID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.product.ProdID })
        </td>
    </tr>
}

</table>
