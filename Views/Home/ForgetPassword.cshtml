
@{
    ViewBag.Title = "ForgetPassword";
}

<h2>Password Recovery</h2>
<div class="row">
        <p class="alert alert-info"> We have Sent an OTP to your Registered Email Address, Check  your Mail and validate your Email by giving that OTP</p>
    </div>

    <div class="row">
        <form>
            <br />
            <input type="text" name="txtOTP" class="form-control" placeholder="Validation OTP" value="@Session["OTP"]" />
            <br />
            <div class="row">
                <div class="col-6">
                    <input type="submit" name="btnValidate" value="Validate" class="btn btn-outline-info" />
                    </div>
                    <div class="col-6">
                        <input type="button" name="btnValidate" value="Send Again" class="btn btn-outline-info" />
                    </div>
                </div>
</form>
    </div>
