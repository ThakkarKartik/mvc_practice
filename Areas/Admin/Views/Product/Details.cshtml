@model WebPractice.Models.tblProduct

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("List","Product")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>

        </h6>
    </div>
    <div class="card-body">
        <div>
            <div class="row">
                <div class="col-md-4" style="text-align:center">
                    <br />
                    <p>
                        Product Added On <b> @Model.CreatedOn.Value </b>
                    </p>
                    <br />


                </div>
                <div class="col-md-8">
                    <div class="row">
                        <h3 class="text-info">@Model.ProdName</h3>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-1x fa-mail-bulk"></i>
                        </div>
                        <div class="col-6">
                            @Model.Price
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-1x fa-phone"></i>
                        </div>
                        <div class="col-6">
                            @Model.ProdDesc
                        </div>
                    </div>
                    <div class="row">

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
                Product Images
        </h6>
    </div>
    <div class="card-body">
        <div class="row">
            @foreach (var item in ViewBag.Product_Images)
            { 
                <div class="col-lg-3">
                    <img src="~/images/@item.ImageURL" class="img img-thumbnail" />

                </div>
            }
        </div>
    </div>

</div>