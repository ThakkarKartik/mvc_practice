@model IEnumerable<WebPractice.Models.tblInquiry>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Your Inquiry </h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th> Name </th>
            <th> Contact No</th>
            <th> Subject</th>
            <th> Reply </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
        <tr>
            <td> @item.FirstName @item.LastName </td>
            <td> @item.ContactNo</td>
            <td> @item.Subject</td>
            <td>
                <a href="@Url.Action("Detail","AdminInq", new { id = item.InqID})" class="btn btn-success btn-sm">
                    Reply
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
